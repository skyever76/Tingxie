/* 启动器首页样式 */
.launcher-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #e0eafc 0%, #cfdef3 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 20rpx;
}
.app-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #1989fa;
  margin-bottom: 80rpx;
  text-shadow: 0 4rpx 16rpx rgba(25,137,250,0.08);
}
.module-list {
  width: 100%;
  max-width: 500rpx;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}
.module-btn {
  background: #07c160;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  border-radius: 16rpx;
  padding: 32rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(7,193,96,0.08);
  letter-spacing: 4rpx;
}
.module-btn + .module-btn {
  margin-top: 0;
} 