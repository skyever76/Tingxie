/* 中文词库多级目录页面样式 */
.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}
.header {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}
.category-item {
  background: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  color: #1989fa;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}
.skeleton-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}
.skeleton-title {
  width: 60%;
  height: 32rpx;
  background: #e0e0e0;
  border-radius: 8rpx;
  margin: 0 auto;
}
.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 60rpx 0;
}
.error-tip {
  color: #ff4d4f;
  text-align: center;
  margin-top: 30rpx;
  font-size: 28rpx;
} 