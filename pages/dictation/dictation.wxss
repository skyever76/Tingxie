/* 听写核心页面样式 */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background: #f8f8f8;
}
.skeleton-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}
.skeleton-title {
  width: 80%;
  height: 32rpx;
  background: #e0e0e0;
  border-radius: 8rpx;
  margin: 0 auto;
}
.progress-bar {
  margin: 20rpx 0;
  padding: 0 20rpx;
}
.progress {
  height: 100%;
  background: #07c160;
  border-radius: 8rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.progress-text {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
  display: block;
  text-align: center;
}
.word-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin: 20rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}
.word-content {
  text-align: center;
  margin-bottom: 30rpx;
}
.word-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}
.word-phonetic {
  font-size: 32rpx;
  color: #666;
}
.controls {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}
.play-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #07c160;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}
.play-btn .iconfont {
  color: #fff;
  font-size: 40rpx;
}
.input-area {
  margin: 40rpx 0;
  padding: 0 20rpx;
}
.answer-input {
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 32rpx;
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.answer-input.correct {
  border-color: #07c160;
  background: #e8f7f0;
}
.answer-input.wrong {
  border-color: #ff4d4f;
  background: #fff1f0;
}
.check-btn {
  background: #07c160;
  color: #fff;
  border-radius: 8rpx;
  font-size: 32rpx;
  width: 100%;
}
.check-btn[disabled] {
  background: #ccc;
}
.answer-area {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 20rpx 0;
}
.answer-text {
  font-size: 32rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}
.answer-meaning {
  font-size: 28rpx;
  color: #666;
  display: block;
}
.stats {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-top: 20rpx;
}
.accuracy, .time {
  font-size: 28rpx;
  color: #666;
}
.tts-btn {
  background: #07c160;
  color: #fff;
  border-radius: 8rpx;
  padding: 10rpx 30rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}
.submit-btn {
  background: #1989fa;
  color: #fff;
  border-radius: 8rpx;
  padding: 10rpx 30rpx;
  font-size: 28rpx;
}
.result-tip {
  margin-top: 20rpx;
}
.correct {
  color: #07c160;
  font-size: 28rpx;
}
.wrong {
  color: #ff4d4f;
  font-size: 28rpx;
}
.auto-next-tip {
  text-align: center;
  color: #999;
  font-size: 26rpx;
  margin: 20rpx 0;
}
.finish-panel {
  background: #fff;
  border-radius: 10rpx;
  padding: 40rpx 20rpx;
  margin: 30rpx 0;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}
.restart-btn {
  background: #07c160;
  color: #fff;
  border-radius: 8rpx;
  padding: 10rpx 40rpx;
  font-size: 28rpx;
  margin-top: 30rpx;
}
.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 60rpx 0;
}
.error-tip {
  color: #ff4d4f;
  text-align: center;
  margin-top: 30rpx;
  font-size: 28rpx;
}
.next-area {
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
}
.next-btn {
  background: #1989fa;
  color: #fff;
  border-radius: 8rpx;
  padding: 18rpx 60rpx;
  font-size: 32rpx;
  font-weight: bold;
} 