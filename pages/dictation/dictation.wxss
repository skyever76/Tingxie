/* 听写核心页面样式 */
.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}
.skeleton-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}
.skeleton-title {
  width: 80%;
  height: 32rpx;
  background: #e0e0e0;
  border-radius: 8rpx;
  margin: 0 auto;
}
.progress-bar {
  width: 100%;
  height: 16rpx;
  background: #eee;
  border-radius: 8rpx;
  margin: 30rpx 0 20rpx 0;
  position: relative;
}
.progress {
  height: 100%;
  background: #07c160;
  border-radius: 8rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.progress-text {
  text-align: right;
  color: #666;
  font-size: 24rpx;
  margin-top: 8rpx;
}
.word-card {
  background: #fff;
  border-radius: 10rpx;
  padding: 40rpx 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  text-align: center;
}
.word-index {
  font-size: 28rpx;
  color: #1989fa;
  margin-bottom: 20rpx;
  display: block;
}
.tts-btn {
  background: #07c160;
  color: #fff;
  border-radius: 8rpx;
  padding: 10rpx 30rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}
.input-area {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 20rpx;
  margin: 20rpx 0;
}
.answer-input {
  flex: 1;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  height: 60rpx;
}
.submit-btn {
  background: #1989fa;
  color: #fff;
  border-radius: 8rpx;
  padding: 10rpx 30rpx;
  font-size: 28rpx;
}
.result-tip {
  margin-top: 20rpx;
}
.correct {
  color: #07c160;
  font-size: 28rpx;
}
.wrong {
  color: #ff4d4f;
  font-size: 28rpx;
}
.auto-next-tip {
  text-align: center;
  color: #999;
  font-size: 26rpx;
  margin: 20rpx 0;
}
.finish-panel {
  background: #fff;
  border-radius: 10rpx;
  padding: 40rpx 20rpx;
  margin: 30rpx 0;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}
.restart-btn {
  background: #07c160;
  color: #fff;
  border-radius: 8rpx;
  padding: 10rpx 40rpx;
  font-size: 28rpx;
  margin-top: 30rpx;
}
.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 60rpx 0;
}
.error-tip {
  color: #ff4d4f;
  text-align: center;
  margin-top: 30rpx;
  font-size: 28rpx;
}
.next-area {
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
}
.next-btn {
  background: #1989fa;
  color: #fff;
  border-radius: 8rpx;
  padding: 18rpx 60rpx;
  font-size: 32rpx;
  font-weight: bold;
} 