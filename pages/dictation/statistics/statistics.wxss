/* 学习进度统计页面样式 */
.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.stats-card {
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #07c160;
}

/* 总体统计 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 20rpx;
}

.stats-item {
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  text-align: center;
}

.stats-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #07c160;
  display: block;
  margin-bottom: 10rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
}

/* 进度图表 */
.chart-container {
  width: 100%;
  height: 400rpx;
  padding: 20rpx;
}

.progress-chart {
  width: 100%;
  height: 100%;
}

/* 历史记录 */
.history-list {
  padding: 20rpx;
}

.history-item {
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.history-date {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.history-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.history-words,
.history-accuracy,
.history-time {
  font-size: 24rpx;
  color: #666;
}

.empty-tip {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

/* 导出按钮 */
.export-button {
  margin: 40rpx 20rpx;
  background: #07c160;
  border-radius: 10rpx;
  padding: 20rpx;
  text-align: center;
}

.export-button text {
  color: #fff;
  font-size: 28rpx;
}

/* 骨架屏样式 */
.skeleton-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}
.skeleton-title {
  width: 40%;
  height: 28rpx;
  background: #e0e0e0;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
}
.skeleton-desc {
  width: 60%;
  height: 20rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
}

/* 加载更多提示 */
.load-more-tip {
  text-align: center;
  color: #999;
  font-size: 26rpx;
  padding: 30rpx 0 10rpx 0;
} 