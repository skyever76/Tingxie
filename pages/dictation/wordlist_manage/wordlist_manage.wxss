/* 词库管理页面样式 */
.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 顶部操作栏 */
.action-bar {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.btn-primary {
  background: #07c160;
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 8rpx;
}

.btn-secondary {
  background: #f8f8f8;
  color: #333;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 8rpx;
  border: 1rpx solid #ddd;
}

/* 词库列表 */
.wordlist-container {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
}

.wordlist-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.wordlist-info {
  flex: 1;
}

.wordlist-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.wordlist-desc {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}

.wordlist-count {
  font-size: 24rpx;
  color: #999;
}

.wordlist-actions {
  display: flex;
  gap: 20rpx;
}

.btn-edit {
  background: #1989fa;
  color: #fff;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 6rpx;
}

.btn-delete {
  background: #ff4d4f;
  color: #fff;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 6rpx;
}

.empty-tip {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
}

.modal-header {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-header text {
  font-size: 32rpx;
  font-weight: bold;
}

.close {
  font-size: 40rpx;
  color: #999;
  padding: 0 20rpx;
}

.modal-body {
  padding: 20rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.textarea {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.modal-footer {
  padding: 20rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.btn-cancel {
  background: #f8f8f8;
  color: #333;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 8rpx;
}

.btn-confirm {
  background: #07c160;
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 8rpx;
}

/* 骨架屏样式 */
.skeleton-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}
.skeleton-title {
  width: 40%;
  height: 32rpx;
  background: #e0e0e0;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}
.skeleton-desc {
  width: 60%;
  height: 24rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
}

/* 加载更多提示 */
.load-more-tip {
  text-align: center;
  color: #999;
  font-size: 26rpx;
  padding: 30rpx 0 10rpx 0;
} 