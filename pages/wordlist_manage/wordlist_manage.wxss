.container {
  padding: 20rpx;
  min-height: 100vh;
  background: #f8f8f8;
}

.section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.form-item {
  margin-bottom: 20rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
}

.textarea {
  width: 100%;
  height: 200rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
}

.textarea.content {
  height: 400rpx;
}

/* 上传部分样式 */
.upload-section {
  margin-bottom: 30rpx;
}

.upload-tips {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.format-tips {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.upload-actions {
  display: flex;
  gap: 20rpx;
}

.upload-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  background: #1989fa;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
}

.template-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  color: #1989fa;
  font-size: 28rpx;
  border-radius: 8rpx;
  border: 2rpx solid #1989fa;
}

.upload-btn[disabled] {
  background: #ccc;
}

.progress-bar {
  width: 100%;
  height: 6rpx;
  background: #f0f0f0;
  border-radius: 3rpx;
  margin-top: 20rpx;
  overflow: hidden;
}

.progress-inner {
  height: 100%;
  background: #1989fa;
  transition: width 0.3s ease;
}

/* 预览弹窗样式 */
.preview-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.preview-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.preview-content {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  max-height: 80vh;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.preview-header {
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.preview-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.preview-close {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.preview-body {
  flex: 1;
  padding: 30rpx;
  max-height: calc(80vh - 200rpx);
}

.preview-item {
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.preview-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.preview-file-info {
  margin-bottom: 20rpx;
}

.preview-file-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-right: 20rpx;
}

.preview-file-type {
  font-size: 24rpx;
  color: #999;
}

.preview-word-list {
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 10rpx;
}

.preview-word-item {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
  border-bottom: 2rpx solid #eee;
}

.preview-word-item:last-child {
  border-bottom: none;
}

.preview-word {
  font-size: 26rpx;
  color: #333;
}

.preview-meaning {
  font-size: 26rpx;
  color: #666;
}

.preview-word-count {
  font-size: 24rpx;
  color: #999;
  text-align: right;
}

.preview-footer {
  padding: 20rpx 30rpx;
  border-top: 2rpx solid #f0f0f0;
  display: flex;
  gap: 20rpx;
}

.preview-cancel {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  background: #f5f5f5;
  color: #666;
  font-size: 28rpx;
  border-radius: 8rpx;
}

.preview-confirm {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  background: #1989fa;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
}

.chapter-item {
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.chapter-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.chapter-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.chapter-count {
  font-size: 24rpx;
  color: #999;
}

.delete-btn {
  font-size: 24rpx;
  color: #ff4d4f;
  padding: 10rpx 20rpx;
}

.add-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #07c160;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
  margin-top: 20rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.1);
}

.save-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
} 