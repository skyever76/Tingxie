/* 批量导入导出工具页面样式 */
.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.tool-section {
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #07c160;
}

.section-content {
  padding: 20rpx;
}

/* 导入部分 */
.format-tips {
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.tips-title {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.tips-item {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 6rpx;
}

.input-area {
  width: 100%;
  height: 300rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 导出部分 */
.export-options {
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.option-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.option-item:last-child {
  border-bottom: none;
}

.option-label {
  font-size: 28rpx;
  color: #333;
}

.picker {
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 20rpx;
  background: #fff;
  border-radius: 6rpx;
  border: 1rpx solid #ddd;
}

/* 按钮组 */
.button-group {
  display: flex;
  justify-content: space-around;
  gap: 20rpx;
}

.btn-primary {
  flex: 1;
  background: #07c160;
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx;
  border-radius: 8rpx;
}

.btn-secondary {
  flex: 1;
  background: #f8f8f8;
  color: #333;
  font-size: 28rpx;
  padding: 20rpx;
  border-radius: 8rpx;
  border: 1rpx solid #ddd;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
}

.modal-header {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-header text {
  font-size: 32rpx;
  font-weight: bold;
}

.close {
  font-size: 40rpx;
  color: #999;
  padding: 0 20rpx;
}

.modal-body {
  padding: 20rpx;
}

.result-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.modal-footer {
  padding: 20rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  justify-content: center;
}

.btn-confirm {
  background: #07c160;
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 40rpx;
  border-radius: 8rpx;
} 