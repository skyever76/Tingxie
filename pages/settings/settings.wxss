/* 听写设置页面样式 */
.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.settings-group {
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.settings-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #07c160;
}

.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.settings-item:last-child {
  border-bottom: none;
}

.settings-label {
  font-size: 28rpx;
  color: #333;
}

.settings-value {
  font-size: 24rpx;
  color: #666;
  margin-left: 20rpx;
  min-width: 60rpx;
  text-align: right;
}

/* 滑块样式 */
slider {
  flex: 1;
  margin: 0 20rpx;
}

/* 开关样式 */
switch {
  transform: scale(0.8);
}

/* 重置按钮 */
.reset-button {
  margin: 40rpx 20rpx;
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  text-align: center;
}

.reset-button text {
  color: #ff4d4f;
  font-size: 28rpx;
} 