/* pages/dictation/dictation.wxss */
.container {
  padding: 40rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  color: #666;
}

/* 进度条 */
.progress-bar {
  position: relative;
  height: 6rpx;
  background-color: #e0e0e0;
  border-radius: 3rpx;
  margin: 20rpx 0;
}

.progress {
  height: 100%;
  background-color: #07c160;
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

.progress-text {
  position: absolute;
  right: 0;
  top: -30rpx;
  font-size: 24rpx;
  color: #666;
}

/* 词语卡片 */
.word-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin: 30rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.word-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.word-text.placeholder {
  color: #999;
  font-size: 36rpx;
  font-weight: normal;
}

.word-pinyin {
  font-size: 32rpx;
  color: #666;
}

/* 控制按钮 */
.control-bar {
  display: flex;
  justify-content: space-between;
  margin: 40rpx 0;
}

.control-btn {
  flex: 1;
  margin: 0 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-radius: 40rpx;
  background-color: #fff;
  color: #333;
}

.control-btn.primary {
  background-color: #07c160;
  color: #fff;
}

.control-btn[disabled] {
  background-color: #f5f5f5;
  color: #999;
}

/* 答案控制 */
.answer-bar {
  margin: 20rpx 0;
}

.answer-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-radius: 40rpx;
  background-color: #fff;
  color: #07c160;
}

/* 设置面板 */
.settings-panel {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-top: 40rpx;
}

.setting-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.setting-slider {
  flex: 2;
  margin: 0 20rpx;
}

.setting-value {
  width: 80rpx;
  font-size: 24rpx;
  color: #666;
  text-align: right;
} 