.container {
  padding: 20rpx;
}

.form {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.tip {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
  white-space: pre-wrap;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.picker {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  line-height: 80rpx;
}

.textarea {
  width: 100%;
  height: 300rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.button-group {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.submit-btn, .batch-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.submit-btn {
  background: #07c160;
  color: #fff;
}

.batch-btn {
  background: #1989fa;
  color: #fff;
}

/* 批量导入弹窗样式 */
.batch-import-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 90%;
  max-height: 90vh;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.modal-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  padding: 0 20rpx;
}

.modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.radio-group {
  display: flex;
  gap: 30rpx;
}

.radio {
  font-size: 28rpx;
}

.modal-footer {
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  gap: 20rpx;
}

.cancel-btn, .confirm-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background: #07c160;
  color: #fff;
}

.batch-import {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0,0,0,0.45);
  z-index: 9999;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.batch-import-header {
  width: 90vw;
  background: #fff;
  border-radius: 12rpx 12rpx 0 0;
  padding: 32rpx 24rpx 16rpx 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.batch-import-header .title {
  font-size: 36rpx;
  font-weight: bold;
}

.batch-import-header .close {
  font-size: 40rpx;
  color: #888;
  padding: 0 8rpx;
}

.batch-import-content {
  width: 90vw;
  max-height: 60vh;
  background: #fff;
  padding: 16rpx 24rpx;
  box-sizing: border-box;
  overflow-y: auto;
}

.batch-import-footer {
  width: 90vw;
  background: #fff;
  border-radius: 0 0 12rpx 12rpx;
  padding: 16rpx 24rpx 32rpx 24rpx;
  display: flex;
  justify-content: flex-end;
  gap: 24rpx;
  position: sticky;
  bottom: 0;
  left: 0;
}

.batch-import .btn {
  min-width: 120rpx;
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
}

.batch-import .btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.batch-import .btn.confirm {
  background: #007aff;
  color: #fff;
}

.batch-import .form-item {
  margin-bottom: 24rpx;
}

.batch-import .label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.batch-import .picker {
  padding: 16rpx 0;
  border-bottom: 1px solid #eee;
  color: #333;
}

.batch-import .textarea {
  width: 100%;
  min-height: 180rpx;
  border: 1px solid #eee;
  border-radius: 8rpx;
  padding: 16rpx;
  font-size: 28rpx;
  background: #fafafa;
  margin-top: 8rpx;
}

.batch-import .tip {
  font-size: 24rpx;
  color: #888;
  margin-top: 8rpx;
  display: block;
  white-space: pre-line;
}

.import-log {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #666;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 8rpx 12rpx;
  max-height: 200rpx;
  overflow-y: auto;
}

.log-line {
  display: block;
  margin-bottom: 4rpx;
} 