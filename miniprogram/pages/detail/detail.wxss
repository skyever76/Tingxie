.container {
  padding: 20rpx;
}

/* 词库信息 */
.word-list-info {
  background: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.name {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.meta {
  display: flex;
  font-size: 24rpx;
  color: #999;
}

.category {
  margin-right: 20rpx;
}

/* 工具栏 */
.toolbar {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.search-bar {
  margin-bottom: 20rpx;
}

.search-input {
  width: 100%;
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.actions {
  display: flex;
  justify-content: space-between;
}

.action-btn {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 36rpx;
  margin: 0 10rpx;
  padding: 0;
}

.action-btn:first-child {
  margin-left: 0;
}

.action-btn:last-child {
  margin-right: 0;
}

.action-btn.active {
  color: #07c160;
  background: rgba(7, 193, 96, 0.1);
}

.action-btn.primary {
  color: #fff;
  background: #07c160;
}

/* 词语列表 */
.word-list {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
}

.word-item {
  padding: 20rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.word-item:last-child {
  border-bottom: none;
}

.word-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.word-pinyin {
  font-size: 26rpx;
  color: #999;
}

/* 编辑模式 */
.edit-mode {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
}

.edit-textarea {
  width: 100%;
  height: 600rpx;
  font-size: 28rpx;
  line-height: 1.6;
  padding: 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #fff;
  background: #07c160;
  border-radius: 44rpx;
}

/* 加载状态 */
.loading, .empty {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 26rpx;
} 