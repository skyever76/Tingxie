.container {
  padding: 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  color: #333;
}

.import-section {
  margin-top: 20rpx;
}

.import-section .title {
  margin-bottom: 20rpx;
}

.import-options {
  display: flex;
  gap: 20rpx;
}

.import-option {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #fff;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666;
}

.category-tabs {
  display: flex;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.category-tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.category-tab.active {
  color: #07c160;
}

.category-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #07c160;
  border-radius: 2rpx;
}

.subcategory-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.subcategory-item {
  padding: 12rpx 24rpx;
  background: #fff;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
}

.content {
  flex: 1;
  margin-bottom: 30rpx;
}

.word-list {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.word-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.word-item:last-child {
  border-bottom: none;
}

.word-info {
  flex: 1;
}

.word-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.word-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
}

.word-count {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.word-actions {
  margin-left: 20rpx;
}

.delete-btn {
  font-size: 26rpx;
  color: #ff4d4f;
  background: none;
  border: none;
  padding: 0;
  line-height: 1;
}

.delete-btn::after {
  display: none;
}

.loading, .empty {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 40rpx 0;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 30rpx;
}

.modal-title {
  font-size: 32rpx;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
}

.modal-body {
  padding: 20rpx 0;
}

.modal-body text {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.format-example {
  color: #999;
  font-size: 26rpx;
  background: #f5f5f5;
  padding: 12rpx;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.modal-btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.modal-btn.confirm {
  background: #07c160;
  color: #fff;
} 