.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.create-btn {
  background: #07c160;
  color: white;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  margin: 0;
}

/* 分类切换样式 */
.category-tabs {
  display: flex;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.category-tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 30rpx;
  color: #666;
  position: relative;
}

.category-tab.active {
  color: #07c160;
  font-weight: bold;
}

.category-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #07c160;
}

/* 年级/类别选择样式 */
.subcategory-list {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.subcategory-item {
  width: 25%;
  text-align: center;
  padding: 10rpx 0;
  font-size: 28rpx;
  color: #666;
}

.subcategory-item.active {
  color: #07c160;
  font-weight: bold;
}

.content {
  margin-top: 20rpx;
}

.loading, .empty {
  text-align: center;
  color: #999;
  padding: 40rpx;
}

.word-list {
  padding: 20rpx;
}

.word-item {
  background: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.word-info {
  margin-bottom: 20rpx;
}

.word-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.word-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.word-count {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.word-actions {
  display: flex;
  justify-content: flex-end;
}

.delete-btn {
  font-size: 24rpx;
  color: #ff4d4f;
  background: none;
  border: 1rpx solid #ff4d4f;
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
} 