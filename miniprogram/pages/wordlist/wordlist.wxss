.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.header {
  padding: 20rpx 0;
  text-align: center;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.header-actions {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}

.action-btn {
  font-size: 24rpx;
  color: #999;
  padding: 8rpx 16rpx;
  background: transparent;
}

.action-btn:active {
  opacity: 0.7;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.import-section {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
}

.import-section .title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.import-options {
  display: flex;
  gap: 20rpx;
}

.import-option {
  flex: 1;
  background: #f8f8f8;
  padding: 30rpx;
  border-radius: 12rpx;
  text-align: center;
  font-size: 30rpx;
  color: #333;
}

.category-tabs {
  display: flex;
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.category-tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 32rpx;
  color: #666;
  position: relative;
}

.category-tab.active {
  color: #1aad19;
  font-weight: bold;
}

.category-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #1aad19;
  border-radius: 2rpx;
}

.subcategory-list {
  display: flex;
  flex-wrap: wrap;
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.subcategory-item {
  width: 25%;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.subcategory-item.active {
  color: #1aad19;
  font-weight: bold;
}

.content {
  flex: 1;
  margin-bottom: 20rpx;
}

.word-list {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.word-item {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #eee;
}

.word-item:last-child {
  border-bottom: none;
}

.word-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.word-name {
  font-size: 32rpx;
  color: #333;
}

.word-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
}

.word-count {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.word-actions {
  display: flex;
  gap: 20rpx;
}

.delete-btn {
  background: transparent;
  color: #999;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border: none;
  line-height: 1.5;
  position: relative;
}

.delete-btn::after {
  display: none;
}

.delete-btn:active {
  opacity: 0.7;
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

.empty {
  text-align: center;
  padding: 40rpx;
  color: #999;
  background: #fff;
  border-radius: 12rpx;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 30rpx;
}

.modal-title {
  font-size: 32rpx;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
}

.modal-body {
  padding: 20rpx 0;
}

.modal-body text {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.format-example {
  color: #999;
  font-size: 26rpx;
  background: #f5f5f5;
  padding: 12rpx;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.modal-btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.modal-btn.confirm {
  background: #07c160;
  color: #fff;
}

/* 底部操作区域 */
.bottom-actions {
    padding: 20rpx;
    margin-top: 20rpx;
    background: #fff;
    border-radius: 12rpx;
    display: flex;
    gap: 20rpx;
}

.action-btn {
    flex: 1;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    background: #f8f8f8;
    color: #666;
    border-radius: 8rpx;
    font-size: 28rpx;
    border: none;
}

.action-btn::after {
    display: none;
}

.action-btn:active {
    background: #eee;
}

.delete-wordlist-btn {
    color: #ff4d4f;
}

.delete-duplicates-btn {
    color: #ff4d4f;
}

.wordlist-container {
    padding: var(--spacing-md);
}

.wordlist-item {
    background: var(--bg-primary);
    padding: var(--spacing-md) var(--spacing-lg);
    margin-bottom: var(--spacing-sm);
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-sm);
    transition: all var(--transition-fast) ease;
}

.wordlist-item-hover {
    background: var(--bg-secondary);
}

.wordlist-name {
    font-size: var(--font-size-base);
    color: var(--text-primary);
}

.wordlist-count {
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
    background: var(--bg-secondary);
    padding: 4rpx 12rpx;
    border-radius: var(--radius-full);
}

.wordlist-info {
    color: var(--text-secondary);
}

.wordlist-desc {
    font-size: var(--font-size-base);
    display: block;
    margin-bottom: var(--spacing-sm);
}

.wordlist-meta {
    display: flex;
    flex-direction: column;
    gap: 4rpx;
}

.wordlist-time {
    font-size: var(--font-size-xs);
    color: var(--text-tertiary);
}

.empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-xl) var(--spacing-md);
    color: var(--text-tertiary);
}

.empty-text {
    font-size: var(--font-size-lg);
    margin-bottom: var(--spacing-sm);
}

.empty-subtext {
    font-size: var(--font-size-base);
}

.loading-state {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: var(--spacing-xl) var(--spacing-md);
}

.loading-text {
    color: var(--text-tertiary);
    font-size: var(--font-size-base);
} 