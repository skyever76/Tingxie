/* pages/launcher/launcher.wxss */
.launcher-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center; /* 垂直居中 */
  align-items: center;     /* 水平居中 */
  background: #f8f9fa;
}

.module-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 48rpx; /* 按钮间距更大 */
  margin-top: 0;
}

.module-btn {
  width: 400rpx;
  height: 96rpx;
  font-size: 40rpx;   /* 字体更大 */
  font-weight: bold;
  color: #fff;
  background: #07c160;
  border: none;
  border-radius: 16rpx;
  margin: 0 auto;
  box-shadow: 0 8rpx 24rpx rgba(7,193,96,0.08);
  transition: background 0.2s;
}
.module-btn:active {
  background: #059c4b;
}