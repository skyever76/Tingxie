.container {
  padding: 40rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  margin-top: 100rpx;
  text-align: center;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  display: block;
}

.content {
  margin-top: 100rpx;
  width: 100%;
}

.login-btn {
  width: 80%;
  margin: 40rpx auto;
  background-color: #07c160;
  color: white;
  border-radius: 10rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
} 