.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
}

/* 搜索栏 */
.search-bar {
  padding: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.search-input {
  width: 100%;
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 分类选择 */
.category-bar {
  display: flex;
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.picker {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  background: #f5f5f5;
  border-radius: 36rpx;
  margin: 0 10rpx;
}

/* 词库列表 */
.word-list {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
}

.word-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.word-item:last-child {
  border-bottom: none;
}

.word-info {
  flex: 1;
  margin-right: 20rpx;
}

.word-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.word-desc {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.word-meta {
  display: flex;
  font-size: 24rpx;
  color: #666;
}

.word-category {
  margin-right: 20rpx;
}

.word-actions {
  display: flex;
  align-items: center;
}

.delete-btn {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  color: #ff4d4f;
  background: #fff;
  border: 2rpx solid #ff4d4f;
  border-radius: 30rpx;
  padding: 0;
}

/* 加载状态 */
.loading, .no-more, .empty {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 26rpx;
}

/* 创建按钮 */
.create-btn {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background: #07c160;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(7, 193, 96, 0.3);
}

.create-btn .iconfont {
  color: #fff;
  font-size: 48rpx;
} 