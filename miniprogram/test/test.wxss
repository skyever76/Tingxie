/* pages/test/test.wxss */
.container {
  padding: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
}

.test-section {
  margin-bottom: 40rpx;
}

.test-btn {
  background-color: #07c160;
  color: #fff;
  border-radius: 8rpx;
}

.result-section {
  background-color: #f5f5f5;
  padding: 20rpx;
  border-radius: 8rpx;
}

.result-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.result-content {
  font-size: 24rpx;
  color: #666;
  white-space: pre-wrap;
  word-break: break-all;
} 